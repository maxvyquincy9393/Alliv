# ==============================================================================
# COLABMATCH Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=8080
CORS_ORIGIN=http://localhost:5173

# ------------------------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------------------------
MONGO_URI=mongodb://localhost:27017/alliv
REDIS_URL=redis://localhost:6379

# ------------------------------------------------------------------------------
# JWT & AUTHENTICATION (REQUIRED - Generate secure random strings!)
# ------------------------------------------------------------------------------
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or: openssl rand -base64 32
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_characters_required
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters_required
REFRESH_TOKEN_FINGERPRINT_PEPPER=your_fingerprint_pepper_min_32_characters_required

# JWT token lifetimes (in seconds)
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600

# ------------------------------------------------------------------------------
# OAUTH PROVIDERS (Optional - for social login)
# ------------------------------------------------------------------------------
OAUTH_REDIRECT_BASE=http://localhost:8080/auth/oauth

# Google OAuth
OAUTH_GOOGLE_ID=
OAUTH_GOOGLE_SECRET=

# GitHub OAuth
OAUTH_GITHUB_ID=
OAUTH_GITHUB_SECRET=

# X/Twitter OAuth
OAUTH_X_ID=
OAUTH_X_SECRET=

# ------------------------------------------------------------------------------
# EMAIL/SMS VERIFICATION
# ------------------------------------------------------------------------------
# SMTP for email (e.g., smtp://user:pass@smtp.gmail.com:587)
SMTP_URL=
EMAIL_FROM=noreply@alliv.app

# SMS Provider (mock, twilio, vonage)
SMS_PROVIDER=mock
SMS_PROVIDER_API_KEY=

# ------------------------------------------------------------------------------
# FILE UPLOAD - CLOUDINARY
# ------------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ------------------------------------------------------------------------------
# MAPS & GEOLOCATION
# ------------------------------------------------------------------------------
MAPS_API_KEY=

# ------------------------------------------------------------------------------
# MONITORING & ERROR TRACKING
# ------------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# ------------------------------------------------------------------------------
# SECURITY - RECAPTCHA
# ------------------------------------------------------------------------------
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=




