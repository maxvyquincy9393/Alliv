# Application Configuration
NODE_ENV=development
DEBUG=false
PORT=8080

# CORS & Security
CORS_ORIGIN=http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
MONGO_URI=mongodb://localhost:27017/alliv
REDIS_URL=redis://localhost:6379

# JWT & Sessions (MUST BE CHANGED IN PRODUCTION!)
# Generate secure random strings (32+ characters):
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_ACCESS_SECRET=change_this_secret_to_random_32plus_chars
JWT_REFRESH_SECRET=change_this_refresh_secret_to_random_32plus_chars
REFRESH_TOKEN_FINGERPRINT_PEPPER=change_this_pepper_to_random_32plus_chars
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600

# OAuth Providers (Optional - leave empty to disable)
OAUTH_REDIRECT_BASE=http://localhost:8080/auth/oauth
OAUTH_GOOGLE_ID=
OAUTH_GOOGLE_SECRET=
OAUTH_GITHUB_ID=
OAUTH_GITHUB_SECRET=
OAUTH_X_ID=
OAUTH_X_SECRET=
OAUTH_FACEBOOK_APP_ID=
OAUTH_FACEBOOK_APP_SECRET=

# Email Service (Required for email verification)
SMTP_URL=smtp://username:password@smtp.gmail.com:587
EMAIL_FROM=noreply@alliv.app

# SMS Service (Optional)
SMS_PROVIDER=mock
SMS_PROVIDER_API_KEY=

# Cloudinary (Required for photo uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Maps (Required for geo features)
MAPS_API_KEY=your_google_maps_api_key

# Monitoring & Error Tracking (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# CAPTCHA (Optional)
RECAPTCHA_SECRET_KEY=
RECAPTCHA_SITE_KEY=

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8080
